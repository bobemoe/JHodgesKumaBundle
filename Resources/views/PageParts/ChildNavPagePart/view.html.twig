<div class="child-nav-pp">

	{% if nodemenu is defined %}
        {% set children = nodemenu.current.node.children %}
        {% if nodemenu.current.node.children|length > 0 %}
            {% set activeSubnode = nodemenu.getActiveForDepth(2) %}
			<nav role="navigation">
			    <ul class="list-reset sub-navigation">
			    {% for node in activeSubnode.children %}
			        {% if not node.node.isHiddenFromNav() %}
			            <li class="sub-navigation__item {% if(node.active) %}sub-navigation__item--active{% endif %}">
			                <a href="{{ path('_slug', { 'url': node.slug }) }}" class="sub-navigation__link">
			                    {{ node.title }}
			                    {% if(node.active) %}
			                        <i class="icon-chevron-right sub-navigation__link__icon"></i>
			                    {% endif %}
			                </a>
			            </li>
			        {% endif %}
			    {% endfor %}
			    </ul>
			</nav>
    	{% endif %}
    {% endif %}
    
</div>
