<ul class="list-reset sub-navigation">
	{% for node in items %}
	    {% if not node.node.isHiddenFromNav() %}
	        <li class="sub-navigation__item {% if(node.active) %}sub-navigation__item--active{% endif %}">
	            <a href="{{ path('_slug', { 'url': node.slug }) }}" class="sub-navigation__link">
	                {{ node.title }}
	                {% if(node.active) %}
	                    <i class="icon-chevron-right sub-navigation__link__icon"></i>
	                {% endif %}
	            </a>
                {% if node.children|length > 0 %}
                	{% if depth > 0 %}
    					{% include 'JHodgesKumaBundle:Layout:navigation.html.twig' with {'items': node.children, 'depth': depth-1} %}				
    				{% endif %}
                {% endif %}	            
	        </li>
	    {% endif %}
	{% endfor %}
</ul>
